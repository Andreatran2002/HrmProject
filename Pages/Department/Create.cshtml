@page
@model hrmProject.Pages_Department.CreateModel

@{
    ViewData["Title"] = "Thêm phòng ban";
}

<h1>Thêm phòng ban</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.Department_id" class="control-label"></label>
                <input asp-for="Department.Department_id" class="form-control" />
                <span asp-validation-for="Department.Department_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Department_name" class="control-label"></label>
                <input asp-for="Department.Department_name" class="form-control" />
                <span asp-validation-for="Department.Department_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.HomeAddress" class="control-label"></label>
                <input asp-for="Department.HomeAddress" class="form-control" />
                <span asp-validation-for="Department.HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Phone" class="control-label"></label>
                <input asp-for="Department.Phone" class="form-control" />
                <span asp-validation-for="Department.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
